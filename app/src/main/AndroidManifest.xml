<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.eshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.productDetails" />
        <activity android:name=".view.favourite" />
        <activity android:name=".view.Login" />
        <activity android:name=".view.SignUp" />
        <activity android:name=".view.categories" />
        <activity android:name=".view.productofcategory" />
        <activity android:name=".view.search" />
        <activity
            android:name=".view.myCart"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".view.Rating"></activity>
        <activity android:name=".view.shippingAddress"></activity>
    </application>

</manifest>