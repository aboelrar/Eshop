<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/GoToDetails"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_180sdp"
                android:src="@drawable/tshirt"
                android:id="@+id/productimagecat"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:id="@+id/favicon"
                android:background="@drawable/ovaltransparent"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_75sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:id="@+id/addtocarticon"
                android:background="@drawable/ovalblue"
                android:padding="@dimen/_6sdp"
                app:srcCompat="@drawable/whitecart_24dp" />
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_110sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:id="@+id/share"
                android:background="@drawable/ovaltransparent"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_share_black_24dp" />

        </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:src="@drawable/line"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:textSize="@dimen/_11ssp"
                android:textColor="@android:color/black"
                android:id="@+id/producttitlecat"
                android:text="orange tshirt classic wistrin for men gens "
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".6"
                android:paddingLeft="@dimen/_5sdp"
                android:gravity="bottom"
                android:id="@+id/priceproductitem"
                android:text="150$"
                android:textColor="@color/price"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp">

                </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>